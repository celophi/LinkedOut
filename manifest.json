{
  "manifest_version": 3,
  "name": "LinkedOut",
  "description": "Hides LinkedIn feed items that are marked as 'Suggested'. LinkedIn you are cringe enough already.",
  "version": "0.1.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://www.linkedin.com/*",
    "*://linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
  ,
  "action": {
    "default_title": "LinkedIn Suggested Hider",
    "default_popup": "popup.html"
  }
}
